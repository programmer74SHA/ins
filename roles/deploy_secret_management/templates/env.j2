# API Configuration
API_BASE_URL={{ secret_management_api_base_url }}

# PostgreSQL Database Configuration
PG_HOST=postgresdb
PG_PORT={{ secret_management_postgres_port }}
PG_DB={{ secret_management_postgres_db }}
PG_USER={{ secret_management_postgres_user }}
PG_PASS={{ secret_management_postgres_password }}

# Vault Configuration
VLT_ADDR={{ secret_management_vault_addr }}
VLT_API_ADDR={{ secret_management_vault_api_addr }}
# Note: VLT_TOKEN and VLT_UNSEAL_KEYS will be set after initialization
# VLT_TOKEN will be populated from vault-init.json
# VLT_UNSEAL_KEYS will be populated from vault-init.json

# Logging Configuration
LOG_LEVEL=INFO
LOG_DRIVER={{ secret_management_log_driver }}
LOG_MAX_SIZE={{ secret_management_log_max_size }}
LOG_MAX_FILE={{ secret_management_log_max_file }}

# Docker Registry
DOCKER_REGISTRY_URL={{ secret_management_docker_registry_url }}
DOCKER_IMAGE_VERSION={{ secret_management_docker_image_version }}

# n8n Configuration (if integrated)
N8N_HOST={{ secret_management_n8n_host }}
N8N_PORT={{ secret_management_n8n_port }}

# Smart Analyzer AI Configuration
SA_HOST={{ secret_management_sa_host }}
SA_PORT={{ secret_management_sa_port }}
